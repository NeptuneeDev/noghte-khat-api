FROM node:18.12-alpine3.16 as common-build-stage

COPY . ./app

WORKDIR /app

RUN npm i
RUN chgrp -R 0 /app/node_modules/prisma && \
  chmod -R g=o /app/node_modules/prisma $$ \
  chown -R /app/node_modules/.prisma

EXPOSE 5000

# Development Build Stage
FROM common-build-stage AS development-build-stage

ENV NODE_ENV development

CMD ["concurrently", "npm run start:migrate:dev", "npm run start:dev"]

# Production Build Stage
FROM common-build-stage AS production-build-stage

ENV NODE_ENV production

RUN npm run prebuild \
    npm run build

CMD ["npm", "run", "start:prod"]

